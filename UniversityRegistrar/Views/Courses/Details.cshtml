@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h2>Course Details</h2>
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
<p><strong>Course number: </strong>@Html.DisplayFor(model => model.Number)</p>


@if(@Model.JoinEntities.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Students the courses contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Student.DateOfEnrollment</li>
  }
  </ul>
}

<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
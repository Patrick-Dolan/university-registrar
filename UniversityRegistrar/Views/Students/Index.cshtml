@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models
@model List<UniversityRegistrar.Models.Student>

<h2>Students</h2>

@if (@Model.Count == 0)
{
  <p>There are no students.</p>
}

<ul>
  @foreach (Student student in  Model)
  {
    <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId})</li>
  }
</ul>

<p>@Html.ActionLink("Add student", "Create")</p>